#include <stdbool.h>
#include <string.h>

bool isValid(char* s) {
    char stack[10000];   // stack to hold brackets
    int top = -1;        // stack pointer
    
    for (int i = 0; i < strlen(s); i++) {
        char c = s[i];
        
        // Push opening brackets
        if (c == '(' || c == '[' || c == '{') {
            stack[++top] = c;
        } else {
            // If stack empty, invalid
            if (top == -1) return false;
            
            char topChar = stack[top--]; // pop
            
            // Check matching pair
            if ((c == ')' && topChar != '(') ||
                (c == ']' && topChar != '[') ||
                (c == '}' && topChar != '{')) {
                return false;
            }
        }
    }
    
    // Valid only if stack is empty
    return top == -1;
}
